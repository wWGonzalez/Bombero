<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/fragment_home">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/mainGrid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="ALERTAS"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="24sp" />
            <!--Fila 1-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_margin="10dp">

                <!--Semestre 1-->
                <LinearLayout
                    android:id="@+id/linear_0"
                    android:layout_width="170dp"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:clickable="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_semestre1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:clickable="false"
                        android:src="@drawable/p_maternidad"
                        android:tint="@color/colorTextIcons" />

                    <TextView
                        android:id="@+id/txt_sem1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="30dp"
                        android:background="@color/colorGrapeFruitDark"
                        android:clickable="false"
                        android:padding="8dp"
                        android:text="Maternidad"
                        android:textAlignment="center"
                        android:textColor="@color/colorTextIcons"
                        android:textSize="18sp" />
                </LinearLayout>
                <!--Semestre 2-->
                <LinearLayout
                    android:id="@+id/linear_1"
                    android:layout_width="170dp"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_semestre2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/p_accidentes"
                        android:tint="@color/colorTextIcons" />

                    <TextView
                        android:id="@+id/txt_semestre2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="30dp"
                        android:background="@color/colorBitterSweetDark"
                        android:padding="8dp"
                        android:text="Accidente"
                        android:textAlignment="center"
                        android:textColor="@color/colorTextIcons"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>
            <!--Fin de Fila 1-->

            <!--Fila 2-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_margin="10dp">

                <!--Semestre 3-->
                <LinearLayout
                    android:id="@+id/linear_2"
                    android:layout_width="33dp"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_semestre4"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/p_incendios"
                        android:tint="@color/colorTextIcons" />

                    <TextView
                        android:id="@+id/txt_semestre4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="20dp"
                        android:background="@color/colorGrassDark"
                        android:padding="8dp"
                        android:text="Incendio"
                        android:textAlignment="center"
                        android:textColor="@color/colorTextIcons"
                        android:textSize="18sp" />
                </LinearLayout>
                <!--Semestre 4-->
                <LinearLayout
                    android:id="@+id/linear_3"
                    android:layout_width="33dp"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_semestre5"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/p_primeros_auxilios"
                        android:tint="@color/colorTextIcons" />

                    <TextView
                        android:id="@+id/txt_semestre5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="20dp"
                        android:background="@color/colorBlueJeansDark"
                        android:padding="8dp"
                        android:text="Primeros Auxilios"
                        android:textAlignment="center"
                        android:textColor="@color/colorTextIcons"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>
            <!--Fin de Fila 2-->
            <!--Fila 3-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_margin="10dp">
                <!--Semestre 5-->
                <LinearLayout
                    android:id="@+id/linear_4"
                    android:layout_width="33dp"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_semestre7"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/p_incendios"
                        android:tint="@color/colorTextIcons" />

                    <TextView
                        android:id="@+id/txt_semestre7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="20dp"
                        android:background="@color/colorMintDark"
                        android:padding="8dp"
                        android:text="SÃ©ptimo"
                        android:textAlignment="center"
                        android:textColor="@color/colorTextIcons"
                        android:textSize="18sp" />
                </LinearLayout>
                <!--Semestre 6-->
                <LinearLayout
                    android:id="@+id/linear_5"
                    android:layout_width="33dp"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_semestre8"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/p_incendios"
                        android:tint="@color/colorTextIcons" />

                    <TextView
                        android:id="@+id/txt_semestre8"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="20dp"
                        android:background="@color/colorAquaDark"
                        android:padding="8dp"
                        android:text="Octavo"
                        android:textAlignment="center"
                        android:textColor="@color/colorTextIcons"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>
            <!--Fin de Fila 3-->
        </LinearLayout>
    </ScrollView>

</LinearLayout>