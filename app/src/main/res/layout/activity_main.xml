<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededed"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/mainGrid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_vertical|center_horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/alerta"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30sp" />
            <!--Fila 1-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:weightSum="2">
                <!--Semestre 1-->
                <LinearLayout
                    android:id="@+id/linear_0"
                    android:layout_width="100dp"
                    android:layout_height="180dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/alertas_redondos"
                    android:clickable="true"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/image_semestre1"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:clickable="false"
                        android:src="@drawable/p_maternidad"
                        android:tint="@color/colorTextIcons" />
                    <TextView
                        android:id="@+id/txt_sem1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/alertas_redondos"
                        android:clickable="false"
                        android:padding="8dp"
                        android:text="@string/maternidad"
                        android:textAlignment="center"
                        android:textColor="@color/colorTextIcons"
                        android:textSize="18sp" />
                </LinearLayout>
                <!--Semestre 2-->
                <LinearLayout
                    android:id="@+id/linear_1"
                    android:layout_width="100dp"
                    android:layout_height="180dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/alertas_redondos"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/image_semestre2"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/p_accidentes"
                        android:tint="@color/colorTextIcons" />
                    <TextView
                        android:id="@+id/txt_semestre2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/alertas_redondos"
                        android:padding="8dp"
                        android:text="@string/accidentes"
                        android:textAlignment="center"
                        android:textColor="@color/colorTextIcons"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>
            <!--Fin de Fila 1-->
            <!--Fila 2-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:weightSum="2">
                <!--Semestre 3-->
                <LinearLayout
                    android:id="@+id/linear_2"
                    android:layout_width="100dp"
                    android:layout_height="180dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/alertas_redondos"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/image_semestre4"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/p_incendios"
                        android:tint="@color/colorTextIcons" />
                    <TextView
                        android:id="@+id/txt_semestre4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/alertas_redondos"
                        android:padding="8dp"
                        android:text="@string/incendios"
                        android:textAlignment="center"
                        android:textColor="@color/colorTextIcons"
                        android:textSize="18sp" />
                </LinearLayout>
                <!--Semestre 4-->
                <LinearLayout
                    android:id="@+id/linear_3"
                    android:layout_width="100dp"
                    android:layout_height="180dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/alertas_redondos"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/image_semestre5"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/p_primeros_auxilios"
                        android:tint="@color/colorTextIcons" />
                    <TextView
                        android:id="@+id/txt_semestre5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/alertas_redondos"
                        android:padding="8dp"
                        android:text="@string/primeros_auxilios"
                        android:textAlignment="center"
                        android:textColor="@color/colorTextIcons"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>
            <!--Fin de Fila 2-->
        </LinearLayout>
    </ScrollView>
</LinearLayout>